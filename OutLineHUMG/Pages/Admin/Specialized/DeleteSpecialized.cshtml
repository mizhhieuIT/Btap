@page
@model OutLineHUMG.Pages.Admin.Specialized.DeleteSpecializedModel
@{
}
<div class="container">
    <h3 class="display-3" style="text-align:center;color:chocolate">Delete Specialized</h3>
    <div style="margin:auto" class="border-light p-3 w-50 shadow">
        <label asp-for="@Model.specDelete.CodeSpecialized">Mã Chuyên ngàng</label>
        <input asp-for="@Model.specDelete.CodeSpecialized" class="form-control" type="text" readonly="readonly"/>
        <label asp-for="@Model.specDelete.Titlespecialized">Tên Chuyên ngàng</label>
        <input asp-for="@Model.specDelete.Titlespecialized" class="form-control" type="text" />
        <label asp-for="@Model.specDelete.Contentspecialized">Mô Tả Chuyên ngàng</label>
        <input asp-for="@Model.specDelete.Contentspecialized" class="form-control" type="text" />
        <label asp-for="@Model.specDelete.Statusspecialized">Trạng thái hoạt động</label>
        <br />
        <input type="radio" asp-for="@Model.specDelete.Statusspecialized" value="0" class="custom-radio" /> Hidden
        <input type="radio" asp-for="@Model.specDelete.Statusspecialized" value="1" class="custom-radio" /> Show
        <br />
        <input class="btn btn-danger" type="submit" value="Delete">
        <button class="btn btn-success" type="reset">Reset</button>
    </div>
</div>