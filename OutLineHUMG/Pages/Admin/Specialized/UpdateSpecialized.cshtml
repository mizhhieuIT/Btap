@page
@model OutLineHUMG.Pages.Admin.Specialized.UpdateSpecializedModel
@{
    ViewData["Title"] = "Update Specialized";
}
<div class="container">
    <h3 class="display-4" style="color:chocolate;text-align:center">Welcome to Create Specialized Pages</h3>
    <form method="post" class="form-group" asp-page-handler="Update">
        <input asp-for="@Model.specUpdate.Idspecialized" type="hidden" />
        <label asp-for="@Model.specUpdate.CodeSpecialized">Mã Chuyên ngàng</label>
        <input asp-for="@Model.specUpdate.CodeSpecialized" class="form-control" type="text" />
        <label asp-for="@Model.specUpdate.Titlespecialized">Tên Chuyên ngàng</label>
        <input asp-for="@Model.specUpdate.Titlespecialized" class="form-control" type="text" />
        <label asp-for="@Model.specUpdate.Contentspecialized">Mô Tả Chuyên ngàng</label>
        <input asp-for="@Model.specUpdate.Contentspecialized" class="form-control" type="text" />
        <label asp-for="@Model.specUpdate.Statusspecialized">Trạng thái hoạt động</label>
        <br />
        <input type="radio" asp-for="@Model.specUpdate.Statusspecialized" value="0" class="custom-radio" /> Hidden
        <input type="radio" asp-for="@Model.specUpdate.Statusspecialized" value="1" class="custom-radio" /> Show
        <br />
        <input class="btn btn-danger" type="submit" value="Create">
        <button class="btn btn-success" type="reset">Reset</button>
    </form>

</div>
